<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Trendique Login</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Inter&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #e6fcfc;
        font-family: "Inter", sans-serif;
      }

      .login-wrapper {
        max-width: 750px;
        margin: 40px auto;
        background: white;
        border-radius: 25px;
        display: flex;
        box-shadow: 0 0 25px rgba(0, 0, 0, 0.08);
        overflow: hidden;
      }

      .login-left {
        flex: 1;
        padding: 50px 40px;
        position: relative;
      }

      .login-left h2 {
        font-family: "Playfair Display", serif;
        font-weight: 700;
        font-size: 2rem;
        text-align: center;
        margin-bottom: 30px;
        color: #333;
      }

      .google-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        border: 1px solid #ccc;
        border-radius: 6px;
        height: 40px;
        font-size: 0.9rem;
        margin-bottom: 20px;
        background-color: #fff;
        cursor: pointer;
      }

      .google-btn img {
        width: 18px;
      }

      .or-divider {
        text-align: center;
        margin: 20px 0;
        position: relative;
        font-size: 0.9rem;
        color: #555;
      }

      .or-divider::before,
      .or-divider::after {
        content: "";
        position: absolute;
        top: 50%;
        width: 40%;
        height: 1px;
        background: #ccc;
      }

      .or-divider::before {
        left: 0;
      }

      .or-divider::after {
        right: 0;
      }

      .form-control {
        margin-bottom: 15px;
        height: 45px;
        border-radius: 6px;
        font-size: 0.95rem;
      }

      .forgot {
        text-align: right;
        font-size: 0.85rem;
        color: #555;
        margin-bottom: 20px;
      }

      .btn-login {
        width: 100%;
        background-color: #00d1d1;
        color: white;
        font-weight: 600;
        height: 45px;
        border: none;
        border-radius: 6px;
      }

      .btn-login:hover {
        background-color: #00baba;
      }

      .signup {
        margin-top: 20px;
        text-align: center;
        font-size: 0.9rem;
      }

      .signup a {
        color: #00b5b5;
        text-decoration: none;
        font-weight: 600;
      }

      @media (max-width: 768px) {
        .login-wrapper {
          flex-direction: column;
        }

        .login-right {
          height: 300px;
        }
      }
    </style>
  </head>
  <body>
    <div class="login-wrapper">
      <div class="login-left">
        <h2>TRENDIQUE</h2>

        <div class="google-btn">
          <img
            src="https://img.icons8.com/color/48/000000/google-logo.png"
            alt="Google"
          />
          <span>Login with Google</span>
        </div>
        <% if(locals.message && message.length > 0){ %>
            <div class="alert alert-danger text-center">
                <%= message %>
            </div>
        <% } %>
        <div class="or-divider">or</div>
        <form id="loginForm" action="/login" method="post"  novalidate>
            <input type="email" id="email" name="email" class="form-control" placeholder="Email" />
            <div id="emailError" style="color:red; font-size: 0.8rem;"></div>
          
            <input type="password" id="password" name="password" class="form-control" placeholder="Password" />
            <div id="passwordError" style="color:red; font-size: 0.8rem;"></div>
          
            <div class="forgot">
              <a href="#">Forgot password?</a>
            </div>
          
            <button type="submit" class="btn btn-login">Login</button>
          </form>
          

        <div class="signup">Donâ€™t have an account? <a href="#">Sign Up</a></div>
      </div>
      <div
        class="login-right"
        style="
          flex: 1;
          background: url('https://tse1.mm.bing.net/th/id/OIP.P5T0ZDIWitLIbJfNOYhzFgHaLG?pid=Api')
            no-repeat center center/cover;
        "
      ></div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        const email = document.getElementById("email");
        const password = document.getElementById("password");
        const emailError = document.getElementById("emailError");
        const passwordError = document.getElementById("passwordError");
      
        // Clear email error while typing
        email.addEventListener("input", () => {
          if (email.value.trim() !== "" && /^\S+@\S+\.\S+$/.test(email.value)) {
            emailError.textContent = "";
          }
        });
      
        // Clear password error while typing
        password.addEventListener("input", () => {
          if (password.value.trim() !== "" && password.value.length >= 6) {
            passwordError.textContent = "";
          }
        });
      
        document.getElementById("loginForm").addEventListener("submit", function (e) {
          e.preventDefault();
      
          let isValid = true;
      
          // Email validation
          if (!email.value.trim()) {
            emailError.textContent = "Email is required.";
            isValid = false;
          } else if (!/^\S+@\S+\.\S+$/.test(email.value)) {
            emailError.textContent = "Enter a valid email address.";
            isValid = false;
          } else {
            emailError.textContent = "";
          }
      
          // Password validation
          if (!password.value.trim()) {
            passwordError.textContent = "Password is required.";
            isValid = false;
          } else if (password.value.length < 6) {
            passwordError.textContent = "Password must be at least 6 characters.";
            isValid = false;
          } else {
            passwordError.textContent = "";
          }
      
          if (isValid) {
            alert("Login successful (validation passed)!");
            this.submit(); // Replace with actual backend logic or redirect
          }
        });
      </script>
      
  </body>
</html>
