    <section class="profile-main" aria-label="User Profile Form">
      <h2 class="profile-title">PROFILE</h2>
      <div class="underline"></div>

      <form>
        <div class="input-wrapper">
          <label for="firstName">First Name</label>
          <input type="text" id="firstName" class="form-control" value="Md" readonly />
          <svg class="edit-icon" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" title="Edit" aria-label="Edit icon" role="img">
            <path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04a1.004 1.004 0 0 0 0-1.42l-2.34-2.34a1.004 1.004 0 0 0-1.42 0l-1.83 1.83 3.75 3.75 1.84-1.82z"/>
          </svg>
        </div>

        <div class="input-wrapper">
          <label for="email">Email</label>
          <input type="email" id="email" class="form-control" value="rimell1111@gmail.com" readonly />
          <svg class="edit-icon" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" title="Edit" aria-label="Edit icon" role="img">
            <path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04a1.004 1.004 0 0 0 0-1.42l-2.34-2.34a1.004 1.004 0 0 0-1.42 0l-1.83 1.83 3.75 3.75 1.84-1.82z"/>
          </svg>
        </div>

        <div class="input-wrapper">
          <label for="phone">Phone Number</label>
          <input type="tel" id="phone" class="form-control" placeholder="Phone Number" readonly />
          <svg class="edit-icon" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" title="Edit" aria-label="Edit icon" role="img">
            <path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04a1.004 1.004 0 0 0 0-1.42l-2.34-2.34a1.004 1.004 0 0 0-1.42 0l-1.83 1.83 3.75 3.75 1.84-1.82z"/>
          </svg>
        </div>

        <div class="gender-group" role="radiogroup" aria-labelledby="gender-label">
          <span id="gender-label" class="me-4 fw-bold" style="font-size:1.1rem;">Your Gender</span>
          <label class="me-4"><input type="radio" name="gender" value="male" checked /> Male</label>
          <label><input type="radio" name="gender" value="female" /> Female</label>
