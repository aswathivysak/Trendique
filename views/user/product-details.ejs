<script>
  document.addEventListener('click', async (e) => {
    const btn = e.target.closest('.btn-delete-review');
    if (!btn) return;
  
    const productId = btn.getAttribute('data-product-id');
    const ratingId  = btn.getAttribute('data-rating-id');
  
    // Confirm (SweetAlert2 if available; fallback to confirm)
    let confirmed = true;
    if (window.Swal) {
      const res = await Swal.fire({
        title: 'Delete this review?',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonText: 'Delete',
        cancelButtonText: 'Cancel'
      });
      confirmed = res.isConfirmed;
    } else {
      confirmed = window.confirm('Delete this review?');
    }
    if (!confirmed) return;
  
    try {
      const resp = await fetch(`/product/${productId}/review/${ratingId}`, {
        method: 'DELETE',
        headers: { 'Content-Type': 'application/json' }
       
      });
  
      const data = await resp.json();
      if (!resp.ok || !data.success) {
        throw new Error(data.error || 'Delete failed');
      }
  
      // Remove from DOM
      const row = document.getElementById(`review-${ratingId}`);
      if (row) row.remove();
  
      // Update count & empty state
      const countEl = document.getElementById('reviews-count');
      if (countEl) {
        const newCount = data.ratingsCount ?? Math.max(0, (parseInt(countEl.textContent || '1', 10) - 1));
        countEl.textContent = String(newCount);
      }
      const container = document.getElementById('reviews-container') || document; // adjust if needed
      const noMsg = document.getElementById('no-reviews-msg');
      const anyLeft = !!document.querySelector('[id^="review-"]');
      if (!anyLeft && noMsg) noMsg.style.display = '';
  
      if (window.Swal) {
        Swal.fire({ icon: 'success', title: 'Deleted', timer: 900, showConfirmButton: false });
      }
    } catch (err) {
      console.error(err);
      if (window.Swal) {
        Swal.fire({ icon: 'error', title: 'Error', text: err.message || 'Delete failed' });
      } else {
        alert('Delete failed');
      }
    }
  });
  </script>
  