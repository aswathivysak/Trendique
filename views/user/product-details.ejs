<script>
  document.addEventListener('DOMContentLoaded', function () {
    const incBtn = document.querySelector('.btn-increase');
    const decBtn = document.querySelector('.btn-decrease');
    const input = document.querySelector('.quantity-input');
  
    if (!incBtn || !decBtn || !input) {
      console.warn("Quantity input or buttons not found.");
      return;
    }
  
    incBtn.addEventListener('click', () => {
      let value = parseInt(input.value) || 1;
  
      if (value < 3) {
        input.value = value + 1;
      } else {
        Swal.fire({
          icon: 'warning',
          title: 'Limit Reached',
          text: 'You can only buy up to 3 units of this product.'
        });
        input.value = 3; // Force restore if exceeded
      }
    });
  
    decBtn.addEventListener('click', () => {
      let value = parseInt(input.value) || 1;
  
      if (value > 1) {
        input.value = value - 1;
      } else {
        Swal.fire({
          icon: 'info',
          title: 'Minimum Limit',
          text: 'You must order at least 1 unit.'
        });
        input.value = 1;
      }
    });
  });
  
</script>

