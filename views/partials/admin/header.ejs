<!DOCTYPE HTML>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Trendique | Admin Dashboard</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="shortcut icon" href="#">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10.16.6/dist/sweetalert2.min.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
  <script src="https://kit.fontawesome.com/16d4885483.js" crossorigin="anonymous"></script>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
/>

  <style>
    body {
      background-color: #f4f4f4;
      font-family: 'Poppins', sans-serif;
      height: 100%;
      margin: 0;
      display: flex;
      flex-direction: column;
    }
    main {
      flex: 1;
    }

    /* Sidebar */
    .navbar-aside {
      background-color: #b0d5de;
      width: 240px;
      position: fixed;
      top: 0;
      bottom: 0;
      padding-top: 60px;
    }

    .menu-link {
      color: #333;
      padding: 10px 20px;
      display: block;
      transition: 0.3s;
    }

    .menu-link:hover, .menu-link.active {
      background-color: #345678;
      color: white;
      border-radius: 0 50px 50px 0;
    }

    .main-wrap {
      margin-left: 240px;
      padding: 20px;
    }

    /* Header */
    .custom-header {
      background-color: #ffffff;
      padding: 15px 20px;
      border-radius: 10px;
      box-shadow: 0 0 3px rgba(0, 0, 0, 0.1);
    }

    .custom-header .logo {
      font-weight: 600;
      font-size: 20px;
      text-transform: capitalize;
    }

    .custom-header i {
      font-size: 18px;
      margin-left: 20px;
      cursor: pointer;
    }

    /* Table Styling */
    .table thead {
      background-color: #000;
      color: #fff;
    }

    .table td, .table th {
      vertical-align: middle;
    }

    .status-active {
      color: green;
      background-color: #e6fff0;
      border: 1px solid #b2f0cc;
      border-radius: 12px;
      padding: 3px 12px;
      font-size: 0.9rem;
    }

    .status-blocked {
      color: red;
      background-color: #ffecec;
      border: 1px solid #ffc7c7;
      border-radius: 12px;
      padding: 3px 12px;
      font-size: 0.9rem;
    }

    .action-icons i {
      cursor: pointer;
      margin: 0 5px;
    }

    .pagination .page-item .page-link.active {
      background-color: #6c5ce7;
      color: white;
    }

    footer {
      text-align: center;
      margin: 40px 0 20px;
      font-size: 14px;
      color: #888;
    }
  </style>
</head>
<body>
  <div class="wrapper d-flex flex-column min-vh-100">
  <!-- Sidebar -->
  <aside class="navbar-aside">
    <nav>
      <ul class="list-unstyled">
        <li><a class="menu-link " href="/admin"><i class="fas fa-home"></i> Dashboard</a></li>
        <li><a class="menu-link" href="/admin/users"><i class="fas fa-users"></i> Customers</a></li>
        <li><a class="menu-link" href="/admin/category"><i class="fas fa-list"></i> Categories</a></li>
        <li><a class="menu-link" href="/admin/brands"><i class="fas fa-star"></i> Brands</a></li>
        <li><a class="menu-link" href="/admin/addProducts"><i class="fas fa-plus"></i> Add Product</a></li>
        <li><a class="menu-link" href="/admin/products"><i class="fas fa-box"></i> Products</a></li>
        <li><a class="menu-link" href="/admin/coupon"><i class="fas fa-tags"></i> Coupons</a></li>
        <li><a class="menu-link" href="/admin/returns"><i class="fas fa-star"></i> Returns</a></li>
        <li><a class="menu-link" href="/admin/banner"><i class="fas fa-star"></i> Banner</a></li>
        <li><a class="menu-link" href="/admin/Sales"><i class="fas fa-image"></i> Sales Report</a></li>
        <li><a class="menu-link" href="/admin/orderList"><i class="fas fa-shopping-cart"></i> Orders</a></li>
        <li><a class="menu-link text-danger" href="/admin/logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
      </ul>
    </nav>
  </aside>

  <!-- Main Content -->
  <main class="main-wrap flex-grow-1">
    <!-- Header -->
    <div class="container ">
      <div class="custom-header d-flex justify-content-between align-items-center"  style="background-color: #17a2b8;">
        <div class="d-flex align-items-center gap-2">
          <i class="fas fa-gem"></i>
          <span class="logo">Trendi que</span>
        </div>
        <div class="d-flex align-items-center">
          <!-- <i class="fas fa-search"></i> -->
          <!-- <i class="fas fa-bell ms-3"></i> -->
          <div class="dropdown ms-3">
            <button class="btn btn-outline-dark btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
              Admin
            </button>
            <ul class="dropdown-menu dropdown-menu-end">
              <li><a class="dropdown-item" href="#">Profile</a></li>
              <li><a class="dropdown-item" href="#">Logout</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
